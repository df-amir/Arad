@model IEnumerable<Arad.Models.Play>

@{
    ViewBag.Title = "بازی‌ها";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("درج جدید", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            امتیاز تیم میزبان
        </th>
        <th>
            امتیاز تیم میهمان
        </th>
        <th>
            دخواست کننده
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HostTeamScore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GuestTeamScore)
        </td>
        <td>
            @(item.Request.Account.Person.Name)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.Id }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
