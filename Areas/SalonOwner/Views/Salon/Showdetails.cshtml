@model Arad.Models.Salon
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listsalonsunce = ViewBag.Salon_Sance as List<Arad.Models.Salon_Sance>;
}
<section dir="rtl" class="section section-md bg-gray-100">
    <div class="container">
        <div class="col-md-12 col-lg-12">
            <!-- Heading Component-->
            <article class="heading-component">
                <div class="heading-component-inner">
                    <h5 class="heading-component-title">
                        جزئیات مجموعه ورزشی
                    </h5>
                </div>
            </article>
            <!-- Player Info Corporate-->
            <div class="player-info-corporate">
                <div class="player-info-figure">
                    <div class="player-img">
                        <img src="~/Content/NewContent/images/salon.jpg" alt="" width="368" height="286">
                    </div>
                    <div class="team-logo-img">
                        <img src="~/Content/NewContent/images/salon.jpg" alt="" width="237" height="312">
                    </div>
                </div>
                <div dir="rtl" style="text-align:right;" class="player-info-main">
                    <h4 class="player-info-title">@Model.Title</h4>
                    <p class="player-info-subtitle">فعال</p>
                    <hr>
                    <div class="player-info-table">
                        <div class="table-custom-wrap">
                            <table class="table-custom">
                                <tbody>
                                    <tr>
                                        <th ">مالک:</th>
                                        <th style="text-align:right;">@(Model?.Account?.Person?.Name) @(Model?.Account?.Person?.Family)</th>
                                        <th>شماره تماس:</th>
                                        <th style="text-align:right;">@(Model?.Account?.PhoneNumber)</th>
                                        <th>آدرس:</th>
                                        <th style="text-align:right;">@(Model?.Address)</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr>
                    <div class="player-info-progress">
                        <!-- Linear progress bar-->
                        <article class="progress-linear progress-bar-modern animated">
                            <div class="progress-header">
                                <p>درصد رضایت:</p>
                            </div>
                            <div class="progress-bar-linear-wrap">
                                <div class="progress-bar-linear" style="transition-duration: 1s; width: 95%;"></div>
                            </div><span class="progress-value">95</span>
                        </article>
                    </div>
                </div>
            </div>
            <!--  Block Player Info-->
            <div style="text-align:right;" class="block-player-info">
                <h4>بیوگرافی</h4>
                <!-- Quote Modern-->
                <div class="block-player-info-content">
                    <p>از سال 1380 تاسیس شده و  دارای 20 هزار متر مربع  </p>
                    <p>
                        یک جفت تیر دروازه هندبال - دو جفت پایه بدمینتون - یک جفت میله والیبال
                    </p>
                    <p>دارای کاربری فوتسال ، والیبال ، بدمینتون</p>
                </div>
                <div class="block-player-info-timeline">
                    <div class="player-info-timeline-item">
                        <div class="player-info-timeline-item-header">
                            <span class="timeline-counter">1399</span>
                            <h5>برگزاری مسابقات استانی</h5>
                        </div>
                        <div class="player-info-timeline-item-text">
                            <p>برگزاری مسابقات استانی به میزبانی استان همدان در این سالن.</p>
                        </div>
                    </div>
                    <div class="player-info-timeline-item">
                        <div class="player-info-timeline-item-header">
                            <span class="timeline-counter">1400</span>
                            <h5>تعمیرات اساسی</h5>
                        </div>
                        <div class="player-info-timeline-item-text">
                            <p>تغییر تمامی تجهیزات  کفپوس، سرامیک، سروس آب و فاضلاب</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>