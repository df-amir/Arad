@model Arad.Models.Salon

@{
    ViewBag.Title = "جزئیات مجموعه ورزشی";
}

<h2>Details</h2>

<div>
    <h4>مجموعه ورزشی</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            نام مجموعه
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            نشانی
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            استان
        </dt>

        <dd>
            @(Arad.Classes.PublicFunction.EnumPersianName((Arad.Classes.Enums.Proviance)Model.Province))
        </dd>

        <dt>
            شهرستان
        </dt>

        <dd>
            @(Arad.Classes.PublicFunction.EnumPersianName((Arad.Classes.Enums.City)Model.City))
        </dd>

        <dt>
            مالک مجموعه
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account.Person.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("ویرایش", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("بازگشت", "Index", new { }, new { @class = "btn btn-default" })
</p>
