@model IEnumerable<Arad.Models.Salon_Sance>

@{
    ViewBag.Title = "مدیریت سانس‌ها";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("درج جدید", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            وضعیت رزرو
        </th>
        <th>
            مجموعه ورزشی
        </th>
        <th>
            شروع سانس
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(item.Status == true ? "آزاد" : "رزرو شده")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salon.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sance.StartTime)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.Id }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
