@model IEnumerable<Arad.Models.Request>

@{
    ViewBag.Title = "درخواست‌ها";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("درج جدید", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            وضعیت درخواست
        </th>
        <th>
            نوع بازی
        </th>
        <th>
            درخواست دهنده
        </th>
        <th>
            داور بازی
        </th>
        <th>
            تیم میزبان
        </th>
        <th>
            تیم میهمان
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(item.Status == true ? "پذیرفته شده" : "در انتضار پذیرش")
        </td>
        <td>
            @(Arad.Classes.PublicFunction.EnumPersianName((Arad.Classes.Enums.Request_Type)item.Type))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account.Person.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account1.Person.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team1.Name)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.Id }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
