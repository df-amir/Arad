@model IEnumerable<Arad.Models.Team>

@{
    ViewBag.Title = "تیم‌ها";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("درج جدید", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            نام تیم
        </th>
        <th>
            تاریخ تاسیس
        </th>
        <th>
            رتبه
        </th>
        <th>
            استان
        </th>
        <th>
            شهرستان
        </th>
        <th>
            مالک تیم
        </th>
        <th>
            مربی تیم
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Arad.Classes.DateTimeConvertor.ToShamsi(item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ranc)
        </td>
        <td>
            @(Arad.Classes.PublicFunction.EnumPersianName((Arad.Classes.Enums.Proviance)item.Proviance))
        </td>
        <td>
            @(Arad.Classes.PublicFunction.EnumPersianName((Arad.Classes.Enums.City)item.City))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account.Person.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account1.Person.Name)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
