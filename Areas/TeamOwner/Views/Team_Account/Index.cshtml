@model IEnumerable<Arad.Models.Team_Account>

@{
    ViewBag.Title = "عضویت‌ها";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("درج جدید", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            وضعیت عضویت
        </th>
        <th>
            نام ورزشکار
        </th>
        <th>
            نام تیم
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(Arad.Classes.PublicFunction.EnumPersianName((Arad.Classes.Enums.Team_Account_Status)item.Status))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account.Person.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team.Name)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.Id }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
