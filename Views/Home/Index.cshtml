@{
    var lastPlay = ViewBag.listLastPlay as List<Arad.Models.Play> ??null;
    var lastTeam = ViewBag.listTeam as List<Arad.Models.Team> ??null;
    var lastSalon = ViewBag.listSalon as List<Arad.Models.Salon> ??null;
    var row = 1;
}
